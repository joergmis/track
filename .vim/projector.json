[
    {
        "id": "generate.mocks",
        "name": "generate mocks",
        "command": "rm -rf ./mocks/* && mockery",
        "console": "integratedTerminal"
    },
    {
        "id": "generate.apispec",
        "name": "generate / update apispec",
        "command": "oapi-codegen -package api ./clockodo/api/apispec.yaml > ./clockodo/api/clockodo.gen.go",
        "console": "integratedTerminal"
    },
    {
        "id": "generate.version",
        "name": "generate go files",
        "command": "go generate && go run cmd/track/main.go generate",
        "console": "integratedTerminal"
    },
    {
        "id": "build",
        "name": "build the binary",
        "command": "go build -o track cmd/track/main.go",
        "dependencies": [
            "generate.version"
        ],
        "console": "integratedTerminal"
    },
    {
        "id": "install",
        "name": "install the binary",
        "command": "go install ./cmd/track",
        "dependencies": [
            "generate.version",
            "build"
        ],
        "console": "integratedTerminal"
    },
    {
        "id": "test",
        "name": "run the tests",
        "command": "go test -v ./...",
        "console": "integratedTerminal"
    }
]
